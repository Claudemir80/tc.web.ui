@model TC.WEB.UI.Models.Categoria

@{
    ViewData["Title"] = "Deletar";
}

<h5>Deletar Categoria</h5>

<p>Tem certeza de que deseja excluir categoria?</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <hr />
    
    <form asp-action="Delete">
        <input type="submit" value="Deletar" class="btn btn-danger" onclick="return confirm('Deseja realmente deletar?')" /> |
        <a asp-action="Index">Voltar a Lista</a>
    </form>
</div>
